    <ul class="thr-choices">
        <li data-speech="1star"><a href="{{link}}{{nextPage}}/?rating=1">
            <img src="/theme/images/1stars.png" class="thr-stars">_(1 star)</a></li>
        <li data-speech="2stars"><a href="{{link}}{{nextPage}}/?rating=2">
